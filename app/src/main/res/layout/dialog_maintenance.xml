<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_30"
    android:layout_marginTop="@dimen/dimen_70"
    android:layout_marginEnd="@dimen/dimen_30"
    android:background="@drawable/bg_rounded_card">

    <LinearLayout
        android:id="@+id/approveLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_card"
        android:backgroundTint="@color/gray"
        android:orientation="vertical"
        android:padding="@dimen/dimen_0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10">

            <ImageView
                android:id="@+id/closeImageView"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="@dimen/dimen_30"
                android:layout_alignTop="@id/approveLinearLayout"
                android:layout_alignEnd="@id/approveLinearLayout"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/dimen_15"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/dimen_4"
                android:src="@drawable/ic_clear"
                app:tint="@color/color_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/nameTextView"
                android:layout_marginTop="@dimen/dimen_10"
                android:fontFamily="@font/objective_bold"
                android:text="Maintenance"
                android:textSize="@dimen/font_20" />

            <LinearLayout
                android:id="@+id/createLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/bg_button_bg"
                android:elevation="@dimen/dimen_3"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10">

                <ImageView
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_50"
                    android:padding="@dimen/dimen_5"
                    android:src="@drawable/ic_person_add"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:elevation="@dimen/dimen_2"
                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/dimen_5"
                    android:text="Create"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13" />

                <ImageView
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/updateLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/bg_button_bg"
                android:elevation="@dimen/dimen_3"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10">

                <ImageView
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_50"
                    android:padding="@dimen/dimen_5"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:elevation="@dimen/dimen_2"

                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/dimen_5"
                    android:text="Update / Delete"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13" />

                <ImageView
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/salesLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/bg_button_bg"
                android:elevation="@dimen/dimen_3"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10">

                <ImageView
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_50"
                    android:padding="@dimen/dimen_5"
                    android:src="@drawable/ic_resibo"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:elevation="@dimen/dimen_2"

                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/dimen_5"
                    android:text="Sales"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13" />

                <ImageView
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/searchLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_10"
                android:layout_marginStart="@dimen/dimen_10"
                android:layout_marginEnd="@dimen/dimen_6"
                android:layout_weight="1"
                android:background="@drawable/bg_button_bg"
                android:elevation="@dimen/dimen_3"
                android:visibility="gone"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_10">

                <ImageView
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_50"
                    android:padding="@dimen/dimen_5"
                    android:src="@drawable/ic_users"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:elevation="@dimen/dimen_2"

                    android:fontFamily="@font/fira_sans_semibold"
                    android:padding="@dimen/dimen_5"
                    android:text="Search"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13" />

                <ImageView
                    android:layout_width="@dimen/dimen_10"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/white" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>